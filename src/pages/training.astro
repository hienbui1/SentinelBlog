---
import Layout from '../layouts/Layout.astro';

// ✅ List of all your lifts
const lifts = [
  {
    title: "Dumbbell Incline Chest Press (110lbs)",
    description: "Build upper chest strength and shoulder stability with the incline dumbbell press. Perfect for developing a fuller, more athletic chest.",
    video: "https://sentinel-power-blog-resources.s3.us-east-1.amazonaws.com/Lifting+Videos/110lbs+incline.MP4",
    link: "/Lifting-Articles/dumbbell-incline-press",
  },
  {
    title: "Barbell Squat (365lbs)",
    description: "Develop maximum strength across quads, glutes, and hamstrings with the king of compound lifts.",
    video: "https://sentinel-power-blog-resources.s3.us-east-1.amazonaws.com/Lifting+Videos/Squat.MP4",
    link: "/Lifting-Articles/Squat",
  },
  {
    title: "Bench Press (315lbs)",
    description: "...",
    video: "https://sentinel-power-blog-resources.s3.us-east-1.amazonaws.com/Lifting+Videos/315+Bench.MP4",
    link: "/Lifting-Articles/Bench-Press",
  },
];
---

<Layout title="Training">
  <section class="max-w-5xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-8">Training & Lifts</h1>
    <p class="text-lg text-zinc-400 mb-10">
      Explore my lifts, see how to execute them, and learn about the muscles they target.
    </p>

    <!-- ✅ Dynamic list of all lifts -->
    <section class="grid gap-8 md:grid-cols-2">
      {lifts.map((lift) => (
        <a href={lift.link} class="block group" target="_blank" rel="noopener noreferrer">
          <div class="overflow-hidden rounded-lg shadow-md hover:shadow-xl transition">
            <iframe
              src={lift.video}
              class="w-full h-64 rounded-t-lg"
              allowfullscreen
            ></iframe>
          </div>
          <h2 class="text-2xl font-bold mt-4 group-hover:text-[#1DB954] transition">
            {lift.title}
          </h2>
          <p class="text-zinc-400 mt-2">
            {lift.description}
          </p>
        </a>
      ))}
    </section>

  </section>
</Layout>
